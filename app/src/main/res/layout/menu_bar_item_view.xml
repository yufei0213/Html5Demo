<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/menu_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="matrix" />

    <TextView
        android:id="@+id/menu_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_item_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mgt2"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/menu_bar_text_normal"
        android:textIsSelectable="false"
        android:textSize="@dimen/menu_bar_item_t" />

    <ImageView
        android:id="@+id/msg_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_toEndOf="@id/menu_item_img"
        android:scaleType="matrix"
        android:src="@drawable/menu_bar_item_notice"
        android:visibility="invisible" />

</RelativeLayout>